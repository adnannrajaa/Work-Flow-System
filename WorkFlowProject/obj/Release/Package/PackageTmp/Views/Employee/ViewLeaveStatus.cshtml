@model IEnumerable<WorkFlowProject.Models.Account.ListLeaves>

@{
    ViewBag.Title = "ViewLeaveStatus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header row no-gutters py-4 mb-3 border-bottom">
    <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
        <span class="text-uppercase page-subtitle">Leaves</span>
        <h3 class="page-title">Leave & Status</h3>
    </div>
</div>


<div class="row">
    <!-- Users Stats -->
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="card card-small">
            <div class="card-header border-bottom">
                <h6 class="m-0">Status</h6>
            </div>
            <table class="table">
                <tr>

                    <th>
                        @Html.DisplayNameFor(model => model.ImagePath)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FullName)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.LeavePeriod)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Reason)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            <div class="blog-comments__avatar mr-3">
                                <img src="@Url.Content(item.ImagePath)" />
                            </div>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.LeavePeriod)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Reason)
                        </td>
                        <td>
                            @if (item.Status == true)
                            {
                                <label>Approved</label>
                            }
                            else if (item.Status == false)
                            {
                                <label>Not Approved</label>
                            }
                            else
                            {
                                <label>Pending</label>
                            }
                        </td>
                    </tr>
                }

            </table>
        </div>
        <!-- End Users Stats -->
    </div>
</div>


